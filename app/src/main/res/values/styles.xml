<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- النمط الأساسي للتطبيق -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- نمط شاشة البداية -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- نمط شاشة التحدي -->
    <style name="ChallengeTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- أنماط الأزرار -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButtonSuccess" parent="AppButton">
        <item name="backgroundTint">@color/button_green</item>
    </style>

    <style name="AppButtonDanger" parent="AppButton">
        <item name="backgroundTint">@color/button_red</item>
    </style>
</resources>